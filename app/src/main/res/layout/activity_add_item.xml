<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView android:id="@+id/item_title_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/item_title_label" />
    <EditText android:id="@+id/item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/item_title_hint" />
    <TextView android:id="@+id/item_text_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/item_text_label"/>
    <EditText android:id="@+id/item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/item_text_hint" />
    <Button android:id="@+id/item_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:onClick="addApiSubmit" />
</LinearLayout>